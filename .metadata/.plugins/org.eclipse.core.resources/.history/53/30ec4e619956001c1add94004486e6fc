<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.javalec.Test2.dao.ReplyDao">
<!-- 댓글보기 -->
<select id="readReply" resultType="com.javalec.Test2.dto.ReplyDto">
    	SELECT
    		  RNO, CONTENT, WRITER, REGDATE
    	 FROM MP_REPLY
    	WHERE bId = #{bId}
	</select>
	
	<!-- 댓글쓰기 -->
	<insert id="writeReply">
	INSERT INTO MP_REPLY(
		bId
		, RNO
		, CONTENT
		, WRITER
	)
	VALUES(    #{bId}
		, MP_REPLY_SEQ.NEXTVAL
		, #{content}
		, #{writer}	)
	</insert>
	
	<!-- 댓글 수정 -->
	<update id="updateReply" parameterType="hashmap">
		UPDATE MP_REPLY SET CONTENT = #{content}
		WHERE RNO = #{rno}
	</update>

	<!-- 댓글 삭제 -->
	<delete id="deleteReply" parameterType="hashmap">
		DELETE FROM MP_REPLY
		WHERE RNO = #{rno}
	</delete>
	</mapper>